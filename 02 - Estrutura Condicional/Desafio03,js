// Média de notas com If Else

const nota1 = 6;
const nota2 = 10;
const nota3 = 10;

const media = (nota1 + nota2 + nota3) / 3;

if (media < 5) {
  console.log(`Sua média foi ` + media.toFixed(1) + ` você foi reprovado`);
} else if (media <= 7) {
  console.log(
    `Sua média foi ` + media.toFixed(1) + ` você está de recuperação`
  );
} else {
  console.log(`Sua média foi ` + media.toFixed(1) + ` você foi aprovado`);
}
